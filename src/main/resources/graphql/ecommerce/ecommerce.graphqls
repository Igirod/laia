type Query {
   findMerchantBySlug(slug: String!): MerchantDTO
   findProductById(productId: ID!): ProductDTO
   findProductsPaginated(page: Int!, status: Int): [ProductDTO]
   findProductDetailsByProductId(productId: ID!): [ProductDetailDTO]
   findMerchantById(merchantId: ID!): MerchantDTO
   findPaymentsPaginated(page: Int!): [PaymentDTO]
   findImagesProductsByProductId(productId: ID!): [ImageProductDTO]
}

type Mutation {
   createInvoice(invoice: InvoiceDTO!): InvoiceDTO
   updateInvoice(invoice: InvoiceDTO!): InvoiceDTO
}